@model BudgetBomb.Models.AccountViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="account.BankName" class="control-label"></label>
                <input asp-for="account.BankName" class="form-control" />
                <span asp-validation-for="account.BankName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account.Type" class="control-label"></label>
                <input asp-for="account.Type" class="form-control"></input>
                <span asp-validation-for="account.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account.CurrentBalance" class="control-label"></label>
                <input asp-for="account.CurrentBalance" class="form-control" />
                <span asp-validation-for="account.CurrentBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account.Owner" class="control-label"></label>
                <input asp-for="account.Owner" class="form-control" />
                <span asp-validation-for="account.Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success mt-4" />  
                 <a asp-action="Index"><button class="btn btn-danger mt-4">Back to List</button></a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
